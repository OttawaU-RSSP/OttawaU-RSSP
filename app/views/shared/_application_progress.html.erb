<% Application.states.each do |state_name| %>
  <%= render partial: "shared/application_state", locals:
      {
        state: eval("#{state_name}_state"),
        heading: send("#{state_name}_heading"),
        body: send("#{state_name}_body"),
        next_step: send("#{state_name}_next_step", application),
        application: application,
      }
  %>
<% end %>
