<%= render partial: "legal_internal/applications", locals: { applications: @student_applications } %>

<h1>Applications waiting for an intake discussion:</h1>
<% @applications_requiring_call.each do |application| %>
  <%= application.sponsor_group.name %>
  <%= link_to 'Perform call', edit_legal_internal_follow_up_call_form_path(application_id: application.id) %>
<% end %>

<p><%= link_to "Sign out", session_path, method: :delete, data: { confirm: "Are you sure you want to sign out?" }, class: 'btn btn-danger' %></p>
