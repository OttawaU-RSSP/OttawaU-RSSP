<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h2>Apply as a student</h2>

  <%= form_for @student do |f| %>
    <div class="form-group">
      <%= f.label :name, "Full name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :university, "What university are you affiliated with?" %>
      <%= f.text_field :university, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :course, "Are you volunteering with the SSP as a part of a course? If so, what course?" %>
      <%= f.text_field :course, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :campus_group, "Are you volunteering with the SSP as a part of a campus group? If so, what group?" %>
      <%= f.text_field :campus_group, class: "form-control" %>
    </div>

    <%= f.submit 'Apply', class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
