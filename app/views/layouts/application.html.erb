<!DOCTYPE html>
<html>
<head>
  <title>OttawaURssp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'logo.ico' %>
</head>
<body>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= bootstrap_alert_class_for(key) %>"><%= value %></div>
  <% end %>

  <%= render partial: "shared/app_header" %>
  <%= render partial: "admin/nav_bar", locals: { active: 'manage-admin' } if current_user.admin? %>
  <%= yield %>
  <%= render partial: "shared/app_beta_footer" %>
</div>

<%= yield :javascript %>
</body>
</html>
